<h1><%= t('.profile') %></h1>
<div class="profile">
  <ul class="list-group">
    <li class="list-group-item"><%= t('activerecord.attributes.user.name') + "：#{@user.name}" %>
    <li class="list-group-item"><%= t('activerecord.attributes.user.email') + "：#{@user.email}" %>
    <li class="list-group-item"><%= t('activerecord.attributes.user.postal_code') + "：#{@user.postal_code}" %>
    <li class="list-group-item"><%= t('activerecord.attributes.user.address') + "：#{@user.address}" %>
    <li class="list-group-item"><%= t('activerecord.attributes.user.introduction') + "：#{@user.introduction}" %>
      <ul>
</div>

<div>
  <% if current_user == @user %>
    <%= link_to t('.edit'), edit_user_registration_path(@user), class: "btn btn-primary"  %>
  <% end %>
  <%= link_to t('.back'), users_path, class: "btn btn-secondary" %>
</div>


  <% if @user.books.any? %>
  <h1 class="py-3"><%= t('.posters') %></h1>
  <table class="table">
    <thead>
    <tr>
      <th><%= t '.title' %></th>
      <th><%= t '.memo' %></th>
      <th><%= t '.author' %></th>
      <th><%= t '.picture' %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('books.index.show'), book, class: "btn btn-outline-secondary" %></td>
        <% if book.user == current_user %>
          <td><%= link_to t('books.index.edit'), edit_book_path(book), class: "btn btn-outline-secondary" %></td>
          <td>
            <%= link_to t('books.index.destroy'), book, method: :delete, data:
                {confirm: t('books.index.confirm'),
                 cancel: t('books.index.cancel'),
                commit: t('books.index.commit')}, title: t('books.index.warning'), class: "btn btn-outline-secondary" %>
          </td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
    <%= paginate @books %>
  <% end %>
</div>



