<%= form_with(model: report, local: true) do |form| %>
  <%= render 'layouts/error_messages', model: form.object %>

  <div class="form-group row">
    <%= form.label :title, class: "col-form-label col-sm-1" %>
    <div class="col-sm-6">
      <%= form.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :content, class: "col-form-label col-sm-1" %>
    <div class="col-sm-6">
      <%= form.text_area :content, class: "form-control" %>
    </div>
  </div>

  <%= form.submit t('books.form.create'), class: "btn btn-primary" %>
<% end %>
