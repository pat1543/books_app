<p>
  <strong><%= t '.title' %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= t '.memo' %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= t '.author' %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= t '.picture' %>:</strong>
  <%= image_tag(@book.picture_url) if @book.picture.present? %>
</p>

<%= link_to t('books.show.edit'), edit_book_path(@book), class: "btn btn-outline-secondary" %>
<%= link_to t('books.show.back'), books_path, class: "btn btn-outline-secondary" %>
