<h2><%= link_to @book.user.name, @book.user %></h2>
<p>
  <strong><%= t '.title' %>:</strong>
  <%= @book.title %>
</p>

<p>
  <strong><%= t '.memo' %>:</strong>
  <%= @book.memo %>
</p>

<p>
  <strong><%= t '.author' %>:</strong>
  <%= @book.author %>
</p>

<p>
  <strong><%= t '.picture' %>:</strong>
  <%= image_tag @book.picture.variant(resize:'300x300').processed if @book.picture.attached? %>
</p>

<%= link_to t('books.show.edit'), edit_book_path(@book), class: "btn btn-outline-secondary" if @book.user == current_user %>
<%= link_to t('books.show.back'), books_path, class: "btn btn-outline-secondary" %>
