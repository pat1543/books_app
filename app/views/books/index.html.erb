<div class="text-right">
  <%= link_to t('books.index.new book'), new_book_path, class: "btn btn-primary mb-4" %>
</div>

<% if controller.controller_name == "feeds" %>
  <h1><%= "#{current_user.name}" + t('feeds.index') %></h1>
<% else %>
  <h1><%= t 'books.index.books' %></h1>
<% end %>
  <div class="my-5">
  <table class="table">
    <thead>
    <tr>
      <th><%= t '.title' %></th>
      <th><%= t '.memo' %></th>
      <th><%= t '.author' %></th>
      <th><%= t '.picture' %></th>
      <th><%= t '.poster' %></th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <%= render @books %>
  </table>
</div>
<%= paginate @books%>
