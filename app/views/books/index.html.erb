<h1><%= t '.books' %></h1>

<table class="table">
  <thead>
  <tr>
    <th><%= t '.title' %></th>
    <th><%= t '.memo' %></th>
    <th><%= t '.author' %></th>
    <th><%= t '.picture' %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.memo %></td>
      <td><%= book.author %></td>
      <td><%= book.picture %></td>
      <td><%= link_to t('books.index.show'), book, class: "btn btn-outline-secondary" %></td>
      <td><%= link_to t('books.index.edit'), edit_book_path(book), class: "btn btn-outline-secondary" %></td>
      <td>
        <%= link_to t('books.index.destroy'), book, method: :delete, data:
            {confirm: t('books.index.confirm'),
             cancel: t('books.index.cancel'),
             commit: t('books.index.commit')}, title: t('books.index.warning'), class: "btn btn-outline-secondary" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('books.index.new book'), new_book_path, class: "btn btn-primary" %>
